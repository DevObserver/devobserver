{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"simple-import-sort",
		"import"
	],
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	},
	"rules": {
		"camelcase": "error",
		"no-duplicate-imports": "error",
		"simple-import-sort/exports": "error",
		"simple-import-sort/imports": "error",
		"spaced-comment": "error"
	}
}
